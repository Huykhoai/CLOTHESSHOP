<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_marginTop="5dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_user_admin"
        android:src="@drawable/baseline_add_24"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/name_user_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd= "10dp"
            android:layout_toStartOf="@+id/edit_user_admin"
            android:text="Name"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textSize="15dp"
            android:layout_below="@+id/name_user_admin"
            android:id="@+id/phone_user_admin"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pass"
            android:textColor="#FF00"
            android:textSize="15dp"
            android:layout_below="@+id/phone_user_admin"
            android:id="@+id/password_user_admin"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/delete_user_admin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address"
            android:textSize="15dp"
            android:layout_below="@+id/password_user_admin"
            android:id="@+id/address_user_admin"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:layout_toStartOf="@+id/delete_user_admin"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_mode_edit_outline_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_user_admin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/delete_user_admin"
            android:layout_below="@+id/edit_user_admin"
            android:layout_marginTop="50dp"
            />
    </RelativeLayout>
</LinearLayout>