<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">
  <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:id="@+id/image_product_admin"
      android:src="@drawable/baseline_add_24"
      android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/name_product_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd= "10dp"
            android:layout_toStartOf="@+id/edit_product_admin"
            android:text="Name"
            android:textSize="18dp"
            android:textStyle="bold"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inventory"
            android:textSize="18dp"
            android:layout_below="@+id/name_product_admin"
            android:id="@+id/inventory_product_admin"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="#FF00"
            android:textSize="18dp"
            android:layout_below="@+id/inventory_product_admin"
            android:id="@+id/price_product_admin"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_mode_edit_outline_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_product_admin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/delete_product_admin"
            android:layout_below="@+id/edit_product_admin"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>
</LinearLayout>